{{#each post }}
<div class="row mb-4 post">
  <div class="col-md-5">

    <h2 class="text-center">
      <a href="/post/{{this.id}}">{{this.title}}</a>

    <h2>
     {{this.title}}

    </h2>
   
    <p class="text-center">Created by {{this.user.user_name}} on {{ format_date this.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p class="text-center">
      {{this.description}}
    </p>
  </div>
  
</div>
<div class="container align-items-center mb-4">
<div class="d-flex justify-content-center ml-5">
  <a class="btn btn-primary" href="/post" role="button">Comment</a>
</div>
</div>
{{/each}}

