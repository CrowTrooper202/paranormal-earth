{{#each post }}
<div class="row mb-4 post">
  <div class="col-md-5">

    <h2 class="text-center">
     {{this.title}}
    </h2>
   
    <p class="text-center">Created by {{this.user.user_name}} on {{ format_date this.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p class="text-center">
      {{this.description}}
    </p>
  </div>
  
</div>

{{/each}}

<div id="map"></div>

<script src="/js/mapboxgl.js"></script>